<div class="displayWindow">
<div class="container">
<h1> Add new Question </h1>
<%= form_with scope: :question, url: questions_path , local: true do |form| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@question.errors.count, "error") %> prohibited
        this question from being saved:
      </h2>
      <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title , class: 'form-control' , :required => 'required' ,  placeholder: "Write your question"%>
  </div>

  <div class="form-group">
      <%= form.label :Details %>
      <%= form.text_area :text , class: 'form-control' , :required => 'required' ,  placeholder: "Enter details of question" %>
  </div>

  <div class="form-group"> 
      <%= form.label :Upload_image %><br />
      <%= form.file_field :qimage, :class => 'fileupload' %>            
  </div>   
  
  <div><b><h4>select tags from below </h4> <h6><i> (* use ctrl+mouse select to select multiple ) </i></h6></b> </div>
       
  <div class="form-group">
      <%= select_tag 'tag_names', options_from_collection_for_select(Tag.all,"name","name") , :multiple => true, class: 'form-control' , id: 'newQuestionDropDown'%>
  </div>
  <div class="card">
      <strong>Selected Tags::</strong>
      <div id="all_tags_for_newQuestionShow" >
      </div> 
  </div>    
  <div class="form-group">
    <%= form.text_field :all_tags, id: 'all_tags_for_newQuestionValue',:hidden => true %>  
  </div>

  <%= form.submit "Post Question", class: "btn btn-primary" %>  

<% end %>

<%= link_to '' , questions_path , class: "fas fa-chevron-circle-left" %>
</div>
</div>