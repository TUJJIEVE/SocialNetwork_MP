<!DOCTYPE html>
<html>
  <head>
    <title>Docto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="<%= controller_name %>_<%= action_name %>">

  <div class="container">  
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Docto", root_path, class: 'navbar-brand' %>
      </div>
      <div id="questionSearch">
        <%= form_with(as: "questionSearch", url: search_questions_path , html: { method: :get },local: true) do |f| %>
          <div class="form-group">    
            <%= f.text_field :keyword, class: 'form-control' , placeholder: "search questions with title" %>
          </div>        
          <%= f.submit "searchQuestions", class: 'btn btn-secondary' %>          
        <% end %>


      </div>
      <div id="userSearch">
        <%= form_with(as: "userSearch", url: search_users_path , html: { method: :get },local: true) do |f| %>
          <div class="form-group">    
            <%= f.text_field :keyword, class: 'form-control' , placeholder: "search User with uname" %>
          </div>        
          <%= f.submit "searchUsers", class: 'btn btn-secondary' %>          
        <% end %>
      </div>      

      <div id="notifications">
      <% if user_signed_in? %>
        <div id="newFriendRequests">                        
            <h6> <%= link_to 'new friend requests:', accept_requests_path %> <span id="numberofnewFriendRequests"> 0 </span> </h6>
        </div>        
        <div id="points"> points : <%= current_user.user_profile.points %> </div>  
      <% end %>          
      </div>

      <div id="navbar">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', root_path %></li>
        </ul>        
        <ul class="nav navbar-nav pull-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.uname %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'change password', edit_user_registration_path %></li>
                <li><%= link_to 'conversations', my_conversations_path %></li>
                <li><%= link_to 'edit Personal Information', edit_user_profile_path %></li>
                <li><%= link_to 'show Personal Information', current_user_profile_path %></li>
                <li><%= link_to 'friends', all_friends_path %></li>
                <li><%= link_to 'questions', controller: 'questions' %></li>
                <li><%= link_to 'all tags', all_tags_path %></li>
                <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Log In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <span id="currentuser" class="d-none"><%= current_user.to_json %></span>  
  <% if user_signed_in? %>
    <span id="currentuserprofile" class="d-none"><%= current_user.user_profile.to_json %></span>  
  <% end %>

  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>
    

  <%= yield %>

  </div>
  </body>
</html>
