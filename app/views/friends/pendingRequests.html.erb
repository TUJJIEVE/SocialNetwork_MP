<div class="displayWindow">
<h1>Pending Requests : </h1>
<h4>Number of Results: <%= @pendingRequests.length %> </h4>
<% if @pendingRequests.length == 0 %>
<% redirecttopage = '/' %>
<script>
    var timer = setTimeout(function() {
        window.location = "<%= redirecttopage %>"
    }, 3000);
</script>
<h3> As there are no pending requests, you are being redirected to <%= redirecttopage %> </h3>
<% end %> 
<% number = 1 %>
<% @pendingRequests.each do |r| %>
    <div class="card">    
        <div class="row">
            <%= number %>.
            <h4>Request sent to <b><%= r.accepter.uname %></b> alias <b><i><%= r.accepter.user_profile.full_name %></i></b> at <%= r.created_at.to_s[0,10] %> </h4>
            <% number+=1 %>
        </div>
    <div>
<% end %>
</div>
