<div class="displayWindow">
<h1>pendingRequests : </h1>
<h4>Number of Results: <%= @pendingRequests.length %> </h4>
<% if @pendingRequests.length == 0 %>
<% redirecttopage = '/' %>
<script>
    var timer = setTimeout(function() {
        window.location = "<%= redirecttopage %>"
    }, 3000);
</script>
<h3> as there are no requests pending , redirecting to <%= redirecttopage %> </h3>
<% end %> 
<% number = 1 %>
<% @pendingRequests.each do |r| %>
    <div class="card">    
        <div class="row">
            <%= number %>.
            <%= r.accepter.uname %>  

            <h4> full name : <%= r.accepter.user_profile.full_name %>      </h4>
            
            <%= r.accepter.id %>  
            <%= r.created_at %>        
            <% number+=1 %>
        </div>
    <div>
<% end %>
</div>