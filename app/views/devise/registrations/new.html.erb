<div class="container">
  <div class="row">
    <div class="col-auto mx-auto my-auto text-center">
      <h1>Sign Up</h1>
      <hr class="my-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label "user name", class: "text-capitalize" %>
          <%= f.text_field :uname, class: 'form-control', :required => 'required' %>
        </div>

        <div class="form-group">
          <%= f.label "email", class: "text-capitalize" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "password", class: "text-capitalize" %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <% if @validatable %>
            <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label "password confirmation", class: "text-capitalize" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <%= f.submit "Sign up", class: 'btn btn-outline-primary' %>
      <% end %>
      <hr class="my-4">

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>