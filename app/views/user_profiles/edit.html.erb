<% header "Edit profile information" %>

<% if user_signed_in? %>

    <%= form_for(@user_profile, as: "new_params", url: edit_user_profile_request_path , html: { method: :put }) do |f| %>
            
        <div class="form-group">
            <%= f.label :uname %>
            <%= f.text_field :uname, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :full_name %>
            <%= f.text_field :full_name, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :dob %>
            <%= f.text_field :dob, class: 'form-control' %>
        </div>
        

        <div class="form-group">
            <%= f.label :college_id %>
            <%= f.text_field :college_id, class: 'form-control' %>
        </div>


        <div class="form-group">
            <%= f.label :country %>
            <%= f.text_field :country, class: 'form-control' %>
        </div>

        <div class="form-group"> 
            <%= f.label :Upload_Image %><br />
            <%= f.file_field :profile_picture, :class => 'fileupload' %>            
        </div>
    
        <%= f.submit "Update", class: 'btn btn-primary' %>

    <% end %>

<% else %>
    <%= "you cant do this operation" %>
<% end %>