<% if user_signed_in? %>
<%= form_for(@user_profile, as: "new_params", url: edit_user_profile_request_path , html: { method: :put }) do |f| %>
<div class="row">
<div class="col-sm-12 col-md-6 col-lg-6">
<div class="userProfileWindow">    
        <h1> Edit Information </h1>        
        <div class="form-group">
            <%= f.label :full_name %>
            <%= f.text_field :full_name, class: 'form-control' , :required => 'required' %>
        </div>

        <div class="form-group">
            <%= f.label :dob %>
            <%= f.date_field :dob, class: 'form-control' ,:required => 'required'%>
        </div>
        
        <div class="form-group">
            <%= f.label :college_name %>
            <%= f.text_field :college_id, class: 'form-control',:required => 'required' %>
        </div>

        <div class="form-group">
            <%= f.label :country %>
            <%= f.text_field :country, class: 'form-control' ,:required => 'required' %>
        </div>
</div>
</div>

<div class="col-sm-12 col-md-6 col-lg-6">
<div class="userProfileWindow">    
    <div class="form-group">
        <div>
            <label>Profile Picture:</label>
            <div id="dPicture">
                <%if @user_profile.profile_picture.attached? %>
                    <%= image_tag(@user_profile.profile_picture,:class=>"displayProfilePictureInEdit")%>
                <% else %>
                    <%= image_tag(asset_path("doctor.jpg"),:class=>"displayProfilePictureInEdit") %>            
                <%end%>
            </div>
        </div>   
    </div>
    <div class="form-group"> 
        <%= f.label :Upload_new_profile_picture %><br />
        <%= f.file_field :profile_picture, :class => 'fileupload' %>            
    </div>    
    <%= f.submit "Update", class: 'btn btn-primary' %>
</div>
</div>

<% end %>
</div>

<% else %>
    <% header " U are kidding right , you can't change others profiles" %>
<% end %>