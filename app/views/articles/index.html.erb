<div class="displayWindow">
<div class="container">
<h1>Listing articles</h1>


<table class="table table-light table-striped">
  <thead>
    <th>Title</th>
    <th>Tags</th>
    <th>Likes</th>
  <thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr scope = "row">
      <td><%= article.title %></td>
      <td><%= article.all_tags %></td>
      <td><%= Clap.total_claps(article.id) %></td>

      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to "", clap_article_path(article), method: :post, class: "fas fa-hand-peace" %></td>
      <% if current_user.present? %>     

      <% if article.posted_by == current_user.id %>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete article', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <%end%>
      <%end%>
    </tr>
  <% end %>
</tbody>
</table>

<h3><%= link_to 'Want to add new Article', new_article_path %><h3>

</div>
</div>